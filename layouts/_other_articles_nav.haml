- max = config[:other_articles_max].to_i
- older_only ||= false
#other-articles
  .older
    %ul.medium-links
      - n_older_articles(max, reference_item).each do |item|
        %li
          %a(href="#{route_path(item)}")= "&laquo; #{item[:title]}"
  .newer
    - if !older_only
      %ul.medium-links
        - n_newer_articles(max, reference_item).reverse.each do |item|
          %li
            %a(href="#{route_path(item)}")= "#{item[:title]} &raquo;"
