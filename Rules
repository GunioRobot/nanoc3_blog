#!/usr/bin/env ruby

require 'pp'

preprocess do
  create_tag_pages
  add_missing_info
end

compile '/assets/css/*/' do
  filter :sass
end

route '/assets/css/*/' do
  item.identifier.chop + '.css'
end

compile 'showcase/*' do
  filter :haml
  layout 'showcase'
end

compile '*' do
  pp item
  filter :haml
  layout 'default'
end

route '*' do
  route_path(item)
end


layout '*', :haml
